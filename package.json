{
  "name": "agentic-ai-knowledge-platform",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "content:build": "tsx content/run-build.ts",
    "dev": "npm run content:build && next dev",
    "build": "npm run content:build && next build",
    "start": "next start",
    "test": "npm run test:unit && npm run test:integration",
