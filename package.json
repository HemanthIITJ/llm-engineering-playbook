    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:perf": "playwright test tests/e2e/perf-smoke.spec.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "fast-glob": "^3.3.3",
    "hast-util-to-text": "^4.0.2",
    "katex": "^0.16.11",
    "mermaid": "^11.6.0",
    "next": "^15.2.0",
    "picomatch": "^4.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-katex": "^7.0.1",
    "rehype-pretty-code": "^0.14.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
